### Machine Dependant ###

# Alias for mypry
alias mypry="ruby ~/Documents/Code/Ruby/mypry/mypry.rb"

# Setup rbenv
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Path ptyhon
PATH="/Library/Frameworks/Python.framework/Versions/2.7/bin:${PATH}"
export PATH

# PG path
PATH="/Applications/Postgres.app/Contents/Versions/latest/bin:$PATH"

# run wow as admin not really used anymore keeping in case though
alias playwow="sudo /Applications/WoW_Classic/WoW_Classic.app/Contents/MacOS/World\ of\ Warcraft"

# git branch in prompt.
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\u@\h \W\[\033[32m\]\$(parse_git_branch)\[\033[00m\] $ "